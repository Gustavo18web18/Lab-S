<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Blog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="form-container">
    <h1>Blog</h1>
    <a href="/cadastrar_post.html"><button>Criar Novo Post</button></a>

    <% if (posts.length === 0) { %>
      <p>Nenhum post cadastrado ainda.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div style="text-align: left; margin-top: 20px;">
          <h2><%= post.titulo %></h2>
          <p><strong>Resumo:</strong> <%= post.resumo %></p>
          <p><%= post.conteudo %></p>
        </div>
      <% }); %>
    <% } %>
  </div>
</body>
</html>
